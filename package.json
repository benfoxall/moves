{
  "name": "moves",
  "version": "1.0.0",
  "description": "hacks for detecting movements on phones",
  "scripts": {
    "test": "karma start test/karma.ci.conf",
    "build": "babel -d es5 src",
    "start": "babel -d es5 src -w & live-server --ignore=src,node_modules",
    "css": "postcss --use autoprefixer src/story.css -o assets/story.css",
    "polyfill": "cp node_modules/babel-polyfill/dist/polyfill.js es5/polyfill.js",
    "bundle": "cat assets/prism.js es5/polyfill.js es5/story.js | ./node_modules/.bin/uglifyjs > es5/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benfoxall/moves.git"
  },
  "author": "Ben Foxall @benjaminbenben",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benfoxall/moves/issues"
  },
  "homepage": "https://github.com/benfoxall/moves#readme",
  "devDependencies": {
    "babel": "^6.1.18",
    "babel-cli": "^6.2.0",
    "dotenv": "^1.2.0",
    "karma": "^0.13.15",
    "karma-chrome-launcher": "^0.2.1",
    "karma-junit-reporter": "^0.3.8",
    "karma-mocha": "^0.2.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sauce-launcher": "^0.3.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "autoprefixer": "^6.2.3",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "cssnano": "^3.4.0",
    "live-server": "^0.9.0",
    "postcss-cli": "^2.3.3",
    "uglify-js": "^2.6.1"
  }
}
